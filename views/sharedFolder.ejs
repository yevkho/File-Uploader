<!-- sharedFolder.ejs -->

<html>
  <head>
    <title>Shared Folder: <%= folder.name %></title>
  </head>
  <body>
    <h1>Shared Folder: <%= folder.name %></h1>

    <h3>Files:</h3>
    <% if (files.length > 0) { %>
    <ul>
      <% files.forEach((file) => { %>
      <li>
        <a
          href="/files/<%= file.id %>/download_shared?uuid=<%= sharedFolderUUID %>"
          ><%= file.name %></a
        >
      </li>
      <% }); %>
    </ul>
    <% } else { %>
    <p>No files in this folder.</p>
    <% } %>
  </body>
</html>
